<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.etherapp.activities"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.etherapp.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.etherapp.activities.PadlistActivity"
            android:label="@string/title_activity_padlist"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="de.etherapp.activities.GrouplistActivity"
            android:label="@string/title_activity_grouplist"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="de.etherapp.activities.APISettingsActivity"
            android:label="@string/title_activity_settings"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="de.etherapp.activities.SettingsListActivity"
            android:label="@string/title_activity_settings_list"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="de.etherapp.activities.PadContentActivity"
            android:label="@string/title_activity_pad_content"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="de.etherapp.activities.AboutActivity"
            android:label="@string/title_activity_about"
            android:launchMode="singleTask" >
        </activity>
    </application>

</manifest>
