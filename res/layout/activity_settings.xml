<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".APISettingsActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:text="Enter your EtherPad details"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5" >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="Name:" />

        <EditText
            android:id="@+id/txtapiname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ShowPad"
            android:text="test" >

            <requestFocus />
        </EditText>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5" >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="URL:" />

        <EditText
            android:id="@+id/txtpadurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://pad.shownot.es"
            android:text="http://fastreboot.de" />

    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="Port:" />

        <EditText
            android:id="@+id/txtport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="9001"
            android:text="9001" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="5" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:text="APIKey:" />

        <EditText
            android:id="@+id/txtapikey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="dghdg3e32h83e"
            android:text="8EkKqoT0CR28PcRDpF311XLtspAchXuM" />

    </LinearLayout>

    <Button
        android:id="@+id/btnsave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

</LinearLayout>